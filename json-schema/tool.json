{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://nlp-sandbox.org/schemas/tool.json",
    "title": "Tool",
    "description": "A NLP Tool",
    "type": "object",
    "properties": {
        "name": {
          "description": "The Tool name",
          "type": "string",
          "minLength": 3,
          "maxLength": 60,
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        }
    },
    "required": [
        "name"
    ]
}